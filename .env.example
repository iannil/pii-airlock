# PII-AIRLOCK Configuration
# Copy this file to .env and fill in your values

# Upstream LLM API
PII_AIRLOCK_UPSTREAM_URL=https://api.openai.com
OPENAI_API_KEY=sk-your-api-key-here

# Server Configuration
PII_AIRLOCK_PORT=8000
PII_AIRLOCK_TIMEOUT=120

# Mapping Storage (TTL in seconds)
PII_AIRLOCK_MAPPING_TTL=300

# Features
PII_AIRLOCK_INJECT_PROMPT=true

# Custom PII Rules (optional)
# PII_AIRLOCK_CONFIG_PATH=./config/custom_patterns.yaml

# Strategy Configuration (optional)
# PII_AIRLOCK_STRATEGY_CONFIG=./config/strategies.yaml

# Per-Entity Strategy Configuration (overrides file config)
# Available strategies: placeholder, hash, mask, redact
# PII_AIRLOCK_STRATEGY_PERSON=placeholder
# PII_AIRLOCK_STRATEGY_PHONE=mask
# PII_AIRLOCK_STRATEGY_EMAIL=redact
# PII_AIRLOCK_STRATEGY_CREDIT_CARD=mask
# PII_AIRLOCK_STRATEGY_ID_CARD=mask

# Chinese Person Name Recognizer Configuration
# PII_AIRLOCK_PERSON_BASE_SCORE=0.85
# PII_AIRLOCK_PERSON_SURNAME_BOOST=0.1
# PII_AIRLOCK_PERSON_FULL_NAME_BOOST=0.05
# PII_AIRLOCK_PERSON_MAX_SCORE=0.95
# PII_AIRLOCK_PERSON_MIN_NAME_LENGTH=2
# PII_AIRLOCK_PERSON_MAX_NAME_LENGTH=4

# Logging
PII_AIRLOCK_LOG_LEVEL=INFO
PII_AIRLOCK_LOG_FORMAT=json

# Rate Limiting
PII_AIRLOCK_RATE_LIMIT=60/minute
PII_AIRLOCK_RATE_LIMIT_ENABLED=true
