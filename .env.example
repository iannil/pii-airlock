# PII-AIRLOCK Configuration
# Copy this file to .env and fill in your values

# Upstream LLM API
PII_AIRLOCK_UPSTREAM_URL=https://api.openai.com
OPENAI_API_KEY=sk-your-api-key-here

# Server Configuration
PII_AIRLOCK_HOST=0.0.0.0
PII_AIRLOCK_PORT=8000
PII_AIRLOCK_TIMEOUT=120

# Mapping Storage
PII_AIRLOCK_MAPPING_TTL=300

# Redis (optional, uses memory store if not set)
# PII_AIRLOCK_REDIS_URL=redis://localhost:6379/0

# Features
PII_AIRLOCK_INJECT_PROMPT=true

# Development
PII_AIRLOCK_RELOAD=false
